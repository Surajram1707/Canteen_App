<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="97dp"
        android:layout_y="134dp"
        android:background="#00E2C7C7"
        android:fontFamily="sans-serif-black"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uname"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_x="19dp"
        android:layout_y="233dp"
        android:background="@drawable/gradient"
        android:text="UserName:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/uname1"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:layout_x="158dp"
        android:layout_y="225dp"
        android:background="@drawable/gradient"
        android:gravity="center_horizontal"
        android:hint="Enter Username"
        android:inputType="text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="119dp"
        android:layout_height="39dp"
        android:layout_x="19dp"
        android:layout_y="304dp"
        android:background="@drawable/gradient"
        android:text="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginb"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_x="51dp"
        android:layout_y="464dp"
        android:background="@drawable/gradient"
        android:text="LOGIN"
        android:textSize="30dp" />

    <Button
        android:id="@+id/signb"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="87dp"
        android:layout_y="573dp"
        android:background="@drawable/gradient"
        android:text="SIGN-UP"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="190dp"
        android:layout_height="53dp"
        android:layout_x="155dp"
        android:layout_y="292dp"
        android:background="@drawable/gradient"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_x="28dp"
        android:layout_y="24dp"
        android:background="@drawable/gradient"
        android:text="WELCOME TO               Munch IT !"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="32sp"
        android:textStyle="bold" />
</AbsoluteLayout>
